function enviarCorreoConfirmacion(listaAsistentes) {
  listaAsistentes.forEach(function(asistente) {
    console.log("Enviando correo de confirmaci√≥n a: " + asistente);
    console.log("Hola " + asistente + ", tu asistencia ha sido confirmada ");
  });
}

let asistentes = ["Alvaro", "Luis", "Cesar", "Valeria"];

enviarCorreoConfirmacion(asistentes);
