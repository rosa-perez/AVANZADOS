function verificarDescuento(listaDeCursos) {
  let hayDescuento = listaDeCursos.some(function(curso) {
    return curso.tieneDescuento === true;
  });

  if (hayDescuento) {
    console.log("Â¡Hay al menos un curso con descuento! ðŸŽ‰");
  } else {
    console.log("NingÃºn curso tiene descuento. ");
  }
}

let cursos = [
  { nombre: "JavaScript BÃ¡sico", tieneDescuento: false },
  { nombre: "Python Intermedio", tieneDescuento: false },
  { nombre: "HTML para principiantes", tieneDescuento: true }
];

verificarDescuento(cursos);
